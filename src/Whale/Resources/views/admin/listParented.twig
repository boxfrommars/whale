<table class="table">
    <thead>
        <tr>
            <th>Заголовок</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    {% set linkType = linkType|default('edit') %}
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('admin_' ~ entityName ~ '_' ~ linkType, {id: entity.getId, idParent: entity.idParent}) }}">{{ entity.getTitle }}</a></td>
            <td>
                <a class="btn pull-right action edit" href="#"><i class="icon-edit"></i></a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>